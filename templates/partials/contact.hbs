<div class="container-fluid about-style width-100 height-100">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <h1 class="text-center main-heading">Contact Me</h1>

            {{!-- maps section start --}}
            {{>maps}}
            {{!-- maps section ends --}}

            <form action="/submited" method="POST" class="needs-validation">
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input type="text" style="width: 100%;" class="form-control" placeholder="Enter Name"
                        id="exampleInputName1" name="name" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" style="width: 100%;" class="form-control" placeholder="Enter Email address"
                        id="exampleInputEmail1" name="email" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Phone No.</label>
                    <input type="text" style="width: 100%;" class="form-control" placeholder="Enter Phone No."
                        id="exampleInputEmail1" name="phone" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Message</label>
                    <input type="text" style="width: 100%;" class="form-control" placeholder="Enter Message"
                        id="exampleInputEmail1" name="message" required>
                </div>
                <button type="submit" class="btn btn-primary"
                    style="width: 100%; height: 35px; font-size: 20px; background-color: #5222d0;">Submit</button>
            </form>
        </div>
    </div>
</div>